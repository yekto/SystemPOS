@page "/Login"

@using SystemPOS.Client.Services;
@inject iPosServices iPosServices
@inject NavigationManager navigate
@inject Blazored.SessionStorage.ISyncSessionStorageService sessionStorage
@inject IJSRuntime JS

<PageTitle>POS System</PageTitle>
<div class="form-bg">
    <div class="container">
        <div class="row center">
            <div class="col-md-offset-4 col-md-4 col-sm-offset-3 col-sm-6">
                <div class="text-center">
                    <h5>Welcome to POS</h5>
                </div>
                <br />
                <div class="form-container">
                    <h3 class="title">Sign In Account</h3>
                    <form class="form-horizontal">
                        <div class="form-group">
                            <span class="input-icon"><i class="fa fa-user"></i></span>
                            <input type="text" @bind="lo.Uname" class="form-control" placeholder="Username">
                        </div>
                        <div class="form-group">
                            <span class="input-icon"><i class="fa fa-lock"></i></span>
                            <input type="password" @bind="lo.Pass" class="form-control" placeholder="Password">
                        </div>
                        <div>
                            <button class="btn btn-primary btn-block" style="width:100%; padding:3%;" type="button" @onclick="@(() => checkLogin())">Login</button>
                        </div>
                      
                        @if (alertMessage != null)
                        {
                            <br />
                            <div class="alert alert-danger" role="alert">
                                @alertMessage
                            </div>
                        }
                    </form>
                </div>
                <div class="footer title">
                    <div>
                    </div>
                    <div>
                        Copyright &copy; @DateTime.Now.Year 
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>

